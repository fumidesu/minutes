<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>To Do List</h1>
    <% @todos.each do |todo| %>
    <div class="row">
      <h4><strong><%= todo.action %></strong></h4>
        <%= link_to "Update this action", edit_todo_path(todo.id), class: 'btn btn-default btn-sm btn-success' %>
        <%= link_to 'Delete this action', todo_path(todo.id), method: :delete, data: { confirm: 'Are you sure to delete?' }, class: 'btn btn-default btn-sm btn-success' %>

      </div>
    <% end %>
    <%= link_to "Create a new action", new_todo_path, class: 'btn btn-default btn-sm btn-success' %>
  </div>
</div>

